# Database Configuration
DATABASE_URL="postgresql://partpal:password@localhost:5432/partpal"
POSTGRES_PASSWORD="your_postgres_password"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Rate Limiting Configuration
RATE_LIMIT_AUTH_POINTS=5
RATE_LIMIT_AUTH_DURATION=900
RATE_LIMIT_AUTH_BLOCK=900
RATE_LIMIT_GENERAL_POINTS=100
RATE_LIMIT_GENERAL_DURATION=900
RATE_LIMIT_API_POINTS=1000
RATE_LIMIT_API_DURATION=3600

# Authentication
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# API Configuration
API_URL="http://localhost:3333"
API_PORT=3333
API_HOST="0.0.0.0"

# Application URLs
NEXT_PUBLIC_API_URL="http://localhost:3333"
NEXT_PUBLIC_MARKETPLACE_URL="http://localhost:3000"
NEXT_PUBLIC_IMS_URL="http://localhost:3001"

# Cloud Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Map Services
NEXT_PUBLIC_MAPBOX_TOKEN="your_mapbox_access_token"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
FROM_EMAIL="noreply@partpal.co.za"

# WhatsApp Business API (optional)
WHATSAPP_API_TOKEN="your_whatsapp_business_api_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
SENTRY_DSN="your_sentry_dsn"
SENTRY_ORG="partpal"
SENTRY_PROJECT="partpal-web"

# Payment Processing (for subscription billing)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_UPLOAD=10

# Search Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="partpal_parts"

# Feature Flags
FEATURE_ADVANCED_SEARCH=true
FEATURE_MAP_INTEGRATION=true
FEATURE_WHATSAPP_INTEGRATION=false
FEATURE_PUSH_NOTIFICATIONS=true

# Security
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
SECURE_COOKIES=false  # Set to true in production with HTTPS
TRUST_PROXY=false     # Set to true when behind a reverse proxy

# Environment
NODE_ENV="development"  # development | staging | production
LOG_LEVEL="debug"       # error | warn | info | debug

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

