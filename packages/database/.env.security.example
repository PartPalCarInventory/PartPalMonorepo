# Database Security Configuration
# Copy this to .env and configure for your environment

# Database Connection (Use SSL in production)
DATABASE_URL="postgresql://username:password@localhost:5432/partpal?sslmode=require&sslcert=client-cert.pem&sslkey=client-key.pem&sslrootcert=ca-cert.pem"

# Connection Pool Security
DATABASE_CONNECTION_LIMIT=10
DATABASE_MIN_CONNECTIONS=2
DATABASE_POOL_TIMEOUT=10000
DATABASE_IDLE_TIMEOUT=300000

# Encryption Keys (Generate new keys for production)
DATABASE_ENCRYPTION_KEY="your-32-byte-hex-encryption-key-here"
JWT_SECRET="your-jwt-secret-key-here"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-here"

# Authentication Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=60
REQUIRE_STRONG_PASSWORDS=true

# Audit and Compliance
DATABASE_AUDIT_ENABLED=true
DATABASE_LOG_QUERIES=false
AUDIT_RETENTION_DAYS=90
GDPR_COMPLIANCE=true
PCI_COMPLIANCE=false
AUDIT_TRAIL_ENABLED=true
DATA_RETENTION_DAYS=2555

# Security Monitoring
DATABASE_MONITORING_ENABLED=true
DATABASE_HEALTH_CHECKS=true
DATABASE_HEALTH_CHECK_INTERVAL=30000
DATABASE_LOG_SLOW_QUERIES=true
DATABASE_SLOW_QUERY_THRESHOLD=1000

# Cache Security
DATABASE_ENABLE_CACHING=true
DATABASE_CACHE_TTL=300000
DATABASE_MAX_CACHE_SIZE=1000

# SSL/TLS Configuration
SSL_MODE=require
SSL_CERT_PATH=/path/to/client-cert.pem
SSL_KEY_PATH=/path/to/client-key.pem
SSL_CA_PATH=/path/to/ca-cert.pem

# Backup Security
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key-here"
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION="/secure/backup/path"

# Environment
NODE_ENV=production
LOG_LEVEL=info