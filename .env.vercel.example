# ==========================================
# PartPal Vercel Environment Variables
# ==========================================
# Copy these to Vercel Project Settings > Environment Variables
# Separate configurations for IMS and Marketplace apps

# ==========================================
# DATABASE CONFIGURATION (Both Apps)
# ==========================================
# Use a hosted PostgreSQL service like:
# - Vercel Postgres (recommended for easy integration)
# - Supabase (free tier available)
# - Neon (serverless PostgreSQL)
# - Railway (simple setup)
DATABASE_URL="postgresql://username:password@host:5432/partpal?sslmode=require"

# ==========================================
# REDIS CONFIGURATION (Both Apps)
# ==========================================
# Use a hosted Redis service like:
# - Upstash (recommended, has Vercel integration)
# - Redis Labs
# - Railway
REDIS_URL="redis://default:password@host:port"
REDIS_HOST="your-redis-host.upstash.io"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password"
REDIS_DB="0"

# ==========================================
# AUTHENTICATION (IMS App)
# ==========================================
JWT_SECRET="your_super_secret_jwt_key_minimum_32_characters_long"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS="12"

# ==========================================
# API CONFIGURATION (Both Apps)
# ==========================================
# For serverless API on Vercel, use Vercel Functions
# Or deploy API separately on Railway/Render
NEXT_PUBLIC_API_URL="https://api.partpal.co.za"
API_URL="https://api.partpal.co.za"

# ==========================================
# APPLICATION URLs
# ==========================================
NEXT_PUBLIC_MARKETPLACE_URL="https://partpal.vercel.app"
NEXT_PUBLIC_IMS_URL="https://ims-partpal.vercel.app"

# ==========================================
# CLOUDINARY (Both Apps)
# ==========================================
# Sign up at https://cloudinary.com (free tier available)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="123456789012345"
CLOUDINARY_API_SECRET="abcdefghijklmnopqrstuvwxyz123"

# ==========================================
# EMAIL CONFIGURATION (API)
# ==========================================
# Use a service like:
# - SendGrid (recommended for Vercel)
# - Resend
# - AWS SES
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASS="SG.your_sendgrid_api_key"
FROM_EMAIL="noreply@partpal.co.za"

# ==========================================
# ANALYTICS (Marketplace App)
# ==========================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Sentry (optional, for error tracking)
SENTRY_DSN="https://abc123@o123456.ingest.sentry.io/123456"
SENTRY_ORG="partpal"
SENTRY_PROJECT="partpal-web"

# ==========================================
# PAYMENT PROCESSING (IMS App)
# ==========================================
# Stripe: https://dashboard.stripe.com/
STRIPE_PUBLISHABLE_KEY="pk_live_or_test_..."
STRIPE_SECRET_KEY="sk_live_or_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_AUTH_POINTS="5"
RATE_LIMIT_AUTH_DURATION="900"
RATE_LIMIT_AUTH_BLOCK="900"
RATE_LIMIT_GENERAL_POINTS="100"
RATE_LIMIT_GENERAL_DURATION="900"
RATE_LIMIT_API_POINTS="1000"
RATE_LIMIT_API_DURATION="3600"

# ==========================================
# FILE UPLOAD LIMITS
# ==========================================
MAX_FILE_SIZE="10485760"
MAX_FILES_PER_UPLOAD="10"

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_ADVANCED_SEARCH="true"
FEATURE_WHATSAPP_INTEGRATION="false"
FEATURE_PUSH_NOTIFICATIONS="true"

# ==========================================
# SECURITY
# ==========================================
CORS_ORIGIN="https://partpal.vercel.app,https://ims-partpal.vercel.app"
SECURE_COOKIES="true"
TRUST_PROXY="true"

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV="production"
LOG_LEVEL="info"

# ==========================================
# WHATSAPP BUSINESS API (Optional)
# ==========================================
WHATSAPP_API_TOKEN="your_whatsapp_business_api_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"
