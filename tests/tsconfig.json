{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom", "@types/jest"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "@partpal/shared-ui": ["../packages/shared-ui/src/index.ts"],
      "@partpal/shared-types": ["../packages/shared-types/src/index.ts"],
      "@partpal/shared-utils": ["../packages/shared-utils/src/index.ts"],
      "@partpal/database": ["../packages/database/src/index.ts"],
      "@partpal/api-client": ["../packages/api-client/src/index.ts"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "setup/**/*",
    "fixtures/**/*",
    "types/**/*",
    "../packages/shared-ui/src/**/*",
    "../packages/shared-types/src/**/*",
    "../packages/shared-utils/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}