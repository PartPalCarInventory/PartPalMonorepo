{
  "name": "partpal-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PartPal IMS and Marketplace - Know every part",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "dev:ims": "pnpm --filter @partpal/ims dev",
    "dev:marketplace": "pnpm --filter @partpal/marketplace dev",
    "dev:api": "pnpm --filter @partpal/api dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@types/ioredis": "^5.0.0",
    "ioredis": "^5.8.1"
  }
}
